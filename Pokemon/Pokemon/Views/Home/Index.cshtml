@model Pokemon.Models.PokemonClass
@{
    ViewData["Title"] = "Home Page";
}


<form>
  <div class="text-center">
    <h1 class="display-4">Welcome to the Pokemon Finder!</h1>
    <p>Please visit <a href="https://docs.microsoft.com/aspnet/core">Bulbapedia</a> to find more information about Pokemon.</p>
    <h3>Enter the name of a Pokemon below to find out where you can catch one!</h3>
  </div>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="inputGroup-sizing-default">Pokemon Name</span>
    </div>
    <input id="name" name="name" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
  </div>
  <button type="submit" class="btn btn-danger">Find Pokemon</button>
</form>

@if(Model != null)
{
  <img src="@Model.SpriteUrl" />
  <ul>
    @foreach(var location in Model.Locations)
    {
      <li>
        @location
      </li>
    }
  </ul>
}
